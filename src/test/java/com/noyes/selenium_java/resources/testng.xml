<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">

    <!-- Test Configuration Parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="baseUrl" value="https://www.youtube.com"/>

    <!-- Test Suite -->
    <test name="MySeleniumTestSuite">
        <!-- Test Classes -->
        <classes>
            <class name="main.java.com.noyes.selenium_java.tests.BasicTest">
                <methods>
                    <include name="testMethod"/>
                    <exclude name="testMethodWithParams"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
